@model MvcUp1.Models.ViewModel.ProductViewModel

<form method="post"  >
    @*<input asp-for="Id" hidden />*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.Name" disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.Description" disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.Price" disabled class="form-control" />

                    </div>
                </div>
                <div class="col-4">
                    @*Keep this empty*@
                    @if (Model.product.Id != 0)
                    {
                        <img src="@WC.ImagePath@Model.product.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb" />
                    }
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger "></div>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
